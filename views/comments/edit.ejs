<%- include("../partials/header")  %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit Review</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/camps/<%= camp_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <textarea class="form-control" type="text" name="comment[content]" cols="30"
                        rows="3"><%= comment.content %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-primary btn-block" type="submit">Submit</button>
                </div>
            </form>
            <a href="/camps">Go Back</a>
        </div>

    </div>
</div>
<%- include("../partials/footer")  %>