<%- include("../partials/header")  %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Submit New Camp</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/camps" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[name]" placeholder="Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[location]" placeholder="Location">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[price]" placeholder="Price">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[image]" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="camp[description]" placeholder="Short description" cols="30"
                        rows="5"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                </div>
            </form>
            <a href="/camps">Go Back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer")  %>